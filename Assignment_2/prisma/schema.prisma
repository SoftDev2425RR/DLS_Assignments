generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String       @id @default(cuid())
  name       String
  password   String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  tasksLists TasksLists[]
  tasks      Tasks[]

  @@unique([name])
  @@index([id, name])
}

model Tasks {
  id          String      @id @default(cuid())
  title       String
  description String?
  deadline    DateTime?
  completed   Boolean     @default(false)
  status      TaskStatus  @default(NOT_STARTED)
  tasksList   TasksLists? @relation(fields: [tasksListId], references: [id])
  tasksListId String?
  user        Users?      @relation(fields: [userId], references: [id])
  userId      String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([title])
  @@index([id, title])
}

model TasksLists {
  id        String   @id @default(cuid())
  name      String?
  tasks     Tasks[]
  user      Users?   @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name])
  @@index([id, name])
}

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}
